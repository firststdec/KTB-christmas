    .footer__tel
      a.footer-tel(href='tel:021111111' title='Contact Center')
        i.footer-tel__icon
          img(src='/assets/image/footer/mobile-footer-icon.png', alt='')
        .footer-tel__text
          .footer-tel__title Contact Center
          .footer-tel__number 0 2111 1111
    .footer__sns
      .footer-sns
        .footer-sns__title พบกับเราได้ที่
        ul.footer-sns__list
          li.footer-sns__item
            a.footer-sns__link(href='https://www.facebook.com/krungthaibank/' target='_blank' title='Facebook')
